<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a new title for the item:"/>

    <EditText
        android:id="@+id/edit_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New item title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a new description for the item:"/>

    <EditText
        android:id="@+id/edit_item_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New item body"/>

</LinearLayout>